<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyPadelApp.Views.FITPaymentPage"
             xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
             xmlns:Loader="clr-namespace:MyPadelApp.Controls"
             xmlns:viewmodels="clr-namespace:MyPadelApp.ViewModels"
             x:DataType="viewmodels:FITPaymentViewModel"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False"
             Style="{StaticResource DefaultContentPage}"
             x:Name="this">

    <Grid BackgroundColor="{StaticResource WhiteBackground}">
        <WebView x:Name="web" Source="{Binding PaymentUrl}" Navigated="OnWebNavigated" Navigating="OnWebNavigating" BackgroundColor="{StaticResource WhiteBackground}"></WebView>
        <Loader:ActivityIndicator x:Name="Loader" IsVisible="{Binding IsBusy}" BackgroundColor="White"/>
    </Grid>
</ContentPage>
