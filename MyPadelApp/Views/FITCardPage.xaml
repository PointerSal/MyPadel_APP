<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
             x:Class="MyPadelApp.Views.FITCardPage"
             xmlns:Loader="clr-namespace:MyPadelApp.Controls"
             xmlns:viewmodels="clr-namespace:MyPadelApp.ViewModels"
             x:DataType="viewmodels:FITCardViewModel"
             BackgroundColor="{StaticResource SecondaryColor}"
             Shell.TabBarIsVisible="True"
             Shell.NavBarIsVisible="False"
             Title="">

    <Grid>
        <Grid RowDefinitions="Auto,*,Auto">
            <Grid ColumnDefinitions="*,Auto" BackgroundColor="{StaticResource DefaultPageBackground}" Padding="20,5">
                <Label Text="{localization:Translate Logo}" Style="{StaticResource LogoStyleHorizontalStart}"/>
                <Image Grid.Column="1" Source="info.png" Style="{StaticResource SmallCricleImage}" />
            </Grid>
            <StackLayout Grid.Row="1" VerticalOptions="StartAndExpand" HorizontalOptions="StartAndExpand" Spacing="40" Margin="20">
                <ImageButton Source="backbutton" Style="{StaticResource BackButtonStyle}" Command="{Binding BackCommand}"/>
                <StackLayout Spacing="5">
                    <Label Text="{localization:Translate Attention}" 
                       Style="{StaticResource SmallBoldStyleHorizontalStart}"/>
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{localization:Translate CheckCard}" 
                                Style="{StaticResource LargeSpanWhiteUnbold}"/>
                                <Span Text=" "/>
                                <Span Text="{localization:Translate FITCardActive}" 
                                  Style="{StaticResource LargeSpanWhiteUnbold}"/>
                                <Span Text=" "/>
                                <Span Text="{localization:Translate RenewIt}" 
                                  Style="{StaticResource LargeSpanWhiteUnbold}"
                                  TextDecorations="None"/>
                                <Span Text=" "/>
                                <Span Text="{localization:Translate CallUs}" 
                                  Style="{StaticResource LargeSpanWhiteUnbold}"/>
                                <Span Text=" "/>
                                <Span Text="{localization:Translate TwentyMinutesBefore}" 
                                  Style="{StaticResource LargeSpanWhiteUnbold}"
                                  TextDecorations="None"/>
                                <Span Text=" "/>
                                <Span Text="{localization:Translate MatchStart}" 
                                  Style="{StaticResource LargeSpanWhiteUnbold}"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </StackLayout>
                <StackLayout Spacing="5">
                    <StackLayout>
                        <Label Text="{Binding Card.cardNumber}" Style="{StaticResource MediumLabelUnBoldStyleHorizontalStart}"/>
                        <BoxView Style="{StaticResource BoxViewStyle}"/>
                    </StackLayout>
                    <StackLayout>
                        <Label Text="{Binding Card.expiryDate,Converter={StaticResource NullToN_AConverter}}" Style="{StaticResource MediumLabelUnBoldStyleHorizontalStart}"/>
                        <BoxView Style="{StaticResource BoxViewStyle}"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
            <StackLayout Grid.Row="2" VerticalOptions="EndAndExpand" Margin="20" Spacing="5" IsVisible="{Binding IsCardRenew}">
                <Button Text="{localization:Translate Renew}" Command="{Binding RenewCommand}" Style="{StaticResource BlueButtonStyle}"/>
                <Label Text="{Binding ExpiryMessage}" Style="{StaticResource TooMicroHorizontalStart}"/>
            </StackLayout>
        </Grid>
        <Loader:ActivityIndicator Grid.RowSpan="4" IsVisible="{Binding IsBusy}"/>
    </Grid>
</ContentPage>